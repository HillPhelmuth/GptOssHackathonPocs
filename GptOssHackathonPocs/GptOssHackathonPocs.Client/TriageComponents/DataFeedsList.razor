<div class="dfl-card">
    <div class="dfl-card-header">
        <strong>Live Data Feeds</strong>
        <span class="dfl-float-end dfl-text-sm dfl-text-success">Healthy</span>
    </div>
    <div class="dfl-list dfl-list-flush">
        @foreach (var f in Feeds)
        {
            <div class="dfl-list-item">
                <div class="dfl-flex dfl-justify-between">
                    <div>
                        <div class="dfl-fw-semibold">@f.Name <span class="dfl-badge dfl-badge-success dfl-ms-2">Active</span></div>
                        <div class="dfl-text-muted dfl-text-sm">@f.Url</div>
                    </div>
                    <div class="dfl-text-muted dfl-text-sm dfl-text-end">
                        <div>Poll: @f.PollInterval</div>
                        <div>Active Alerts: @f.Count</div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="dfl-card-footer dfl-text-sm dfl-text-muted">Real-time monitoring of authoritative hazard feeds including NWS, USGS, NHC</div>
</div>