<div class="card">
    <div class="card-header bg-white">
        <strong>Live Data Feeds</strong>
        <span class="float-end small text-success">Healthy</span>
    </div>
    <div class="list-group list-group-flush">
        @foreach (var f in Feeds)
        {
            <div class="list-group-item">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fw-semibold">@f.Name <span class="badge bg-success ms-2">Active</span></div>
                        <div class="text-muted small">@f.Url</div>
                    </div>
                    <div class="text-muted small text-end">
                        <div>Poll: @f.PollInterval</div>
                        <div>Type: @f.Type</div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="card-footer small text-muted">Real-time monitoring of authoritative hazard feeds including NWS, USGS, NHC, and AirNow</div>
</div>