<div class="comm-card comm-root">
    <div class="comm-card-header">
        <strong>Communication Hub</strong>
        <div class="comm-text-muted comm-text-sm">Multi-channel dispatch and stakeholder updates</div>
    </div>
    <div class="comm-card-body">
        <h6>Active Channels</h6>
        <div class="comm-grid comm-gap-2">
            @foreach (var ch in Channels)
            {
                <div class="comm-col-6">
                    <button class="comm-btn comm-btn-outline comm-channel" @onclick="() => OnChannelClicked.InvokeAsync(ch)">
                        <div class="comm-fw-semibold">@ch.Name</div>
                        <div class="comm-text-sm comm-text-muted">@ch.Description</div>
                    </button>
                </div>
            }
        </div>
        <h6 class="mt-3">Quick Messages</h6>
        <div class="comm-grid-block comm-gap-2">
            @foreach (var m in QuickMessages)
            {
                <button class="comm-btn comm-btn-light comm-border comm-quick" @onclick="() => OnSendQuickMessage.InvokeAsync(m)">@m</button>
            }
        </div>
    </div>
</div>