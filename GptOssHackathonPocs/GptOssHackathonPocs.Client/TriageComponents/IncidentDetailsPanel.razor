@using GptOssHackathonPocs.Core.Models

<div class="idp-card idp-root">
    <div class="idp-card-body">
        @if (Incident is null)
        {
            <div class="idp-text-muted">Select an incident to view details.</div>
        }
        else
        {
            <div class="idp-flex idp-justify-between idp-align-start">
                <div>
                    <h5 class="idp-card-title idp-mb-1">@Incident.Title</h5>
                    <div class="idp-text-muted idp-text-sm">@Incident.Timestamp.UtcDateTime.ToString("u")</div>
                </div>
                <span class="idp-badge idp-badge-@SeverityToColor(Incident.Severity)">@Incident.Severity</span>
            </div>
            <div class="mt-3">@Incident.Description</div>
            @if (!string.IsNullOrWhiteSpace(Incident.Link))
            {
                <div class="mt-2"><a href="@Incident.Link" target="_blank">Source</a></div>
            }
            <hr />
            <h6>Geographic Impact</h6>
            <div class="idp-grid idp-gap-2">
                <div class="idp-col">
                    <div class="idp-metric">
                        <div class="idp-text-sm idp-text-muted">Population Exposed</div>
                        <div class="idp-fs-5 idp-fw-bold">@PopulationAffected</div>
                    </div>
                </div>
                <div class="idp-col">
                    <div class="idp-metric">
                        <div class="idp-text-sm idp-text-muted">Vulnerability Index</div>
                        <div class="idp-fs-5 idp-fw-bold">@SviPercentile.ToString("P")</div>
                    </div>
                </div>
            </div>
            <h6 class="mt-3">Nearby Hospitals</h6>
            <div class="idp-flex idp-flex-wrap idp-gap-2">
                @foreach (var tag in CriticalFacilities)
                {
                    <span class="idp-badge idp-badge-pill idp-badge-light idp-border" @onclick="@(() => SelectHospital(tag))">@tag.ToString()</span>
                }
            </div>
        }
    </div>
</div>